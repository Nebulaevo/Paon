{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        
        /* My additionnal settings */
        "paths": {
            // NECESSARY -> otherwise vite.config.ts can't find ressouces in paon folder
            // (used to list projects entrypoints)
            "#paon/*": [ "./paon/src/*", "./paon/src/*.ts", "./paon/src/*.js" ]
        }
    },
    "include": ["vite.config.ts"],
}
