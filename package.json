{
    "name": "frontend-node-create-vite-extra",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "imports": {
        "#paon/*": [
            "./paon/dist/*.js",
            "./paon/dist/*"
        ]
    },
    "scripts": {
        "dev": "node server",
        "build:frontend": "npm run build:frontend:client && npm run build:frontend:server",
        "build:frontend:client": "vite build --ssrManifest charlotte/ssr-manifest.json --outDir dist/client/charlotte",
        "build:frontend:server": "vite build --ssr src/sites/charlotte/entry-server.tsx --outDir dist/server/charlotte",
        "preview": "cross-env NODE_ENV=production node server",
        "server": "cross-env NODE_ENV=PROD node ./paon/dist/template-server/run.js",
        "server:dev": "cross-env NODE_ENV=DEV node ./paon/dist/template-server/run.js",
        "server:preview": "cross-env NODE_ENV=PREVIEW node ./paon/dist/template-server/run.js",
        "core:build": "tsc --project ./paon/tsconfig.json",
        "core:clean-outdir": "node ./paon/dist/dev-scripts/core-clean-outdir/run.js",
        "core:test": "vitest",
        "site:add": "node ./paon/dist/dev-scripts/site-add/run.js",
        "site:build": "node ./paon/dist/dev-scripts/site-build/run.js",
        "site:build-all": "node ./paon/dist/dev-scripts/site-build-all/run.js",
        "site:clean-outdir": "node ./paon/dist/dev-scripts/site-clean-outdir/run.js"
    },
    "dependencies": {
        "@braintree/sanitize-url": "^7.1.0",
        "fastify": "^5.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "serialize-javascript": "^6.0.2",
        "sniffly": "^1.0.2",
        "wouter": "^3.3.5",
        "zustand": "^5.0.1"
    },
    "devDependencies": {
        "@fastify/express": "^4.0.1",
        "@fastify/static": "^8.0.2",
        "@types/node": "^22.7.5",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1",
        "@types/serialize-javascript": "^5.0.4",
        "@vitejs/plugin-react": "^4.3.2",
        "cross-env": "^7.0.3",
        "sass-embedded": "^1.80.1",
        "typescript": "^5.6.3",
        "vite": "^5.4.8",
        "vitest": "^2.1.3"
    }
}
